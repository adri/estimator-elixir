<%= partial "sub_navigation.html", conn: @conn, board_id: @board_id, active: :estimated %>

<div class="card">
  <div class="header">
    <h4 class="title">Estimated Issues</h4>
    <p class="category">Overview over all estimated stories</p>
  </div>
  <div class="content table-responsive table-full-width">
    <table class="table table-hover estimate-table">
      <thead>
      <tr>
        <td>Key</td>
        <td>Summary</td>
        <td>Estimation</td>
      </tr>
      </thead>
      <tbody>
          <%= if Enum.empty?(@issues) do %>
              <tr>
                <td colspan="3">No issues yet, <%= link 'lets estimate', to: page_path(@conn, :estimate, @board_id) %>.</td>
              </tr>
          <% end %>
          <%= for issue <- @issues do %>
              <tr>
                <td width="140">
                    <%= partial "issue_link.html", issue: issue %>
                </td>
                <td><%= issue.summary %></td>
                <td><%= issue.estimation %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>


